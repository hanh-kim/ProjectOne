                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Danh sách"
                android:textColor="#0371C8"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/icAdd"
                android:layout_width="30dp"
